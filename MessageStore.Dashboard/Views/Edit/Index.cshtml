@using MessageStore.Dashboard.Controllers;

@model Message;

@{
    ViewData["Title"] = "Edit Page";
}

@if (ViewBag.ErrorMessage != null)
{
    <div style="margin-top: 15px; color: red">@ViewBag.ErrorMessage</div>
}

<form method="post" asp-controller="Edit" asp-action="save">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row" style="margin-top:10px;">
        <div class="col-xs-3">
            <label for="title">Title:</label>
            <input asp-for="Title" class="form-control" id="title">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label for="body">Body:</label>
            <textarea asp-for="Body" class="form-control" id="body"></textarea>
        </div>
    </div>
    <button type="submit">Save</button>
</form>